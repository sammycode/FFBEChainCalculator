<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ca.valleyforge.android.ffbechaincalculator.MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/bn_manage_units"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_bn_manage_units_text"
        android:onClick="onManageUnitsClick"/>

    <Button
        android:id="@+id/bn_manage_badguys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_bn_manage_badguys_text"
        android:onClick="onManageBadGuysClick"/>

</LinearLayout>
